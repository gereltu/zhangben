/* pages/budget/budget.wxss */
.container {
  padding: 40rpx;
}
.header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}


.over-budget {
  color: red;
  font-weight: bold;
  text-align: center;
  padding: 10px;
  background-color: #ffe6e6;
  border: 1px solid red;
  border-radius: 5px;
  margin: 10px 0;
}


.kefu{
  width: 100rpx;
  height: 100rpx;
  background: #bca77c;
  position: fixed;
  z-index: 10;
  bottom:150rpx;
  right: 30rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #bca77c;

}
.btn{
  position: relative;
  z-index: 2;
  border-radius: 50%;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.pic{
  width: 50%;
  height: 50%;    
  position: absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  margin:auto;
  z-index: 1;
}