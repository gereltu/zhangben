.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.month-picker {
  padding: 16rpx;
  background-color: #40d34c;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  margin-bottom: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.table {
  width: 100%;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
}

.table-row {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  padding: 12rpx 20rpx;
}

.table-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  background-color: #f5f5f5;
  padding: 14rpx 20rpx;
}
.table-cell {
  flex: 1;
  text-align: center;
  padding: 14rpx;
  font-size: 28rpx;
  color: #333;
  border-left: 1px solid #f0f0f0;
}

.table-cell:last-child {
  border-right: 1px solid #f0f0f0;
}

.list-item {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx;
  border-bottom: 1px solid #f0f0f0;
  background-color: #ffffff;
}

.list-item {
  font-size: 16px;
  color: #333;
  margin: 8px 0;
}

.button-container {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.van-row {
  margin-top: 20rpx;
}

.cell-group {
  background-color: #dbac29;  
  padding: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.row-background {
  background-color: #f0f0f0; 
  padding: 30rpx;
}

.col-item {
  text-align: center;
  font-size: 30rpx; /* 设置字体大小 */
}
