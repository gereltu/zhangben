/* 消费记录提醒标题 */
.recordsFont {
  margin-top: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333; /* 深灰色字体 */
  padding-left: 20rpx; /* 增加左侧内边距 */
}
.recordsContainer {
  margin-top: 20rpx;
  padding: 0 20rpx; /* 左右内边距 */
  background-color:rgba(237, 237, 237);
}

/* 每条消费记录 */
.records {
  background-color: #fff; /* 白色背景 */
  border-radius: 12rpx; /* 圆角 */
  padding: 20rpx; /* 内边距 */
  margin-bottom: 20rpx; /* 每条记录之间的间距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

/* 每条记录项 */
.recordItem {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx; /* 每项之间的间距 */
  height: 85rpx;
}

/* 记录项的值 */
.recordValue {
  font-size: 28rpx;
  color: #333; /* 深灰色字体 */
  flex: 1; /* 占据剩余空间 */
}

/* 交易类型样式 */
.tradeType {
  text-align: center; /* 右对齐 */
  margin: 25rpx;
}

/* 金额样式 */
.amount {
  text-align: center; /* 右对齐 */
  font-weight: bold; /* 加粗 */
  font-size: 48rpx;
  margin: 25rpx;
}

.type{
  border-bottom: rgb(236, 230, 230) 2rpx solid;
}