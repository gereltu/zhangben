.container1 {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
/* 头部标题 */
.family-header {
  text-align: center;
  font-size: 38rpx;
  color: #333;
  font-weight: 600;
  padding: 40rpx 0;
  background: #fff;
  margin: -30rpx -30rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

/* 家庭卡片 */
.family-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

/* 家庭名称 */
.family-title {
  font-size: 34rpx;
  color: #2d2d2d;
  font-weight: 500;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.family-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #007bff;
  border-radius: 4rpx;
}

/* 成员列表 */
.member-list {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 单个成员 */
.member-item {
  margin-right: 16rpx;
  max-width: 600rpx;
}

/* 邀请码样式 */
.invite-code {
  display: inline-block;
  font-size: 26rpx;
  color: #007bff;
  background: #f0f6ff;
  padding: 16rpx 23rpx;
  border-radius: 8rpx;
}


/* 底部操作区 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 加入按钮 */
.join-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 按钮点击反馈 */
.btn-hover {
  opacity: 0.8;
}
.invite-input{
  padding: 15rpx;
  margin-bottom:15rpx ;
  border: 2rpx #07c160 solid;
  border-radius: 20rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

