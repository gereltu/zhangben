/* pages/user/userDetail/userDetail.wxss */

.header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
/* 容器样式 */
.container1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}


/* 头像容器 */
.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

/* 头像样式 */
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 2px solid #ddd;
  margin-bottom: 10px;
}

/* 头像提示文字 */
.avatar-hint {
  font-size: 14px;
  color: #999;
}

/* 输入框容器 */
.input-container {
  width: 100%;
  max-width: 400px;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 50px;
  padding: 10px 15px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.input::placeholder {
  color: #999;
}

/* 保存按钮样式 */
.save-button {
  width: 100%;
  max-width: 400px;
  height: 50px;
  background-color: #07c160;
  color: #fff;
  font-size: 16px;
  border: none;
  border-radius: 8px;
  margin-top: 20px;
}

.save-button:hover {
  background-color: #06ad56;
}