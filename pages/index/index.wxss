.banner {
  padding-top: 60rpx;
  padding-bottom: 60rpx;
}

.pics {
  width: 690rpx;
  height: 460rpx;
  border-radius: 60rpx;
}

.container {
  padding: 40rpx;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.filter-buttons {
  display: flex;
  margin-bottom: 40rpx;
  justify-content: center;
}

.filter-buttons button {
  flex: 1;
  margin: 0 15rpx;
}


.month-picker {
  padding: 16rpx;
  background-color: #40d34c;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  margin-bottom: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.bill-list {
  margin-top: 40rpx;
}

.bill-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.bill-type {
  color: #333;
  padding-right: 10rpx;
}

.bill-amount {
  padding-right: 250rpx;
  color: #e64340;
}

.bill-date {
  color: #888;
  margin-left: auto;
}
